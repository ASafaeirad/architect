; Fonts are defined using <font-name>;<vertical-offset>
font-0 = DejaVu Sans:size=9;1
font-1 = Hack Nerd Font Mono:size=13;3
font-2 = Material Icons:pixelsize=10;2
font-3 = FontAwesome:fontformat=truetype:size=12;1
